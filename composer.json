{
    "name": "dimkof/slim-quickstart",
    "description": "Slim Framework Quickstart",
    "keywords": ["Slim Framework", "framework", "slim", "quickstart"],
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitry Momot",
            "email": "mail@dmomot.com"
        }
    ],
	"config": {
		"vendor-dir": "vendor"
	},
	"scripts": {
		"post-install-cmd": [

		],
		"post-update-cmd": [
			"rm -rf app/cache/*"
		],
		"post-create-project-cmd": [
			"mkdir -pv app/cache",
			"mkdir -pv app/clases/Controller",
			"mkdir -pv app/clases/Model",
			"mkdir -pv app/config",
			"mkdir -pv app/logs",
			"mkdir -pv app/views",
			"chmod -Rvf 777 app/cache",
			"chmod -Rvf 777 app/logs",
			"chmod 775 public"
		]
	},
    "require":{
        "php":">=5.3.0",
        "monolog/monolog": "*",
        "slim/slim": "2.*",
        "slim-extensions/mvc": "dev-master"
    },
    "require-dev":{
        "php":">=5.3.0",
        "codeguy/upload": "*",
        "imagine/imagine": "*",
        "j4mie/paris":"dev-develop",
        "league/plates": "2.*",
        "leafo/lessphp": "*",
        "monolog/monolog": "*",
        "mobiledetect/mobiledetectlib": "*",
        "nategood/httpful": "*",
        "pagerfanta/pagerfanta": "*",
        "Respect/Validation": "*",
        "robmorgan/phinx": "*",
        "slim/slim": "2.*",
        "symfony/console": "*",
        "swiftmailer/swiftmailer": "*",
        "willdurand/geocoder": "@stable",

        "twbs/bootstrap":"*"
    },
    "autoload": {
        "psr-4": {
			"App\\": ["app/classes/"]
		}
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "minimum-stability": "dev"
}
